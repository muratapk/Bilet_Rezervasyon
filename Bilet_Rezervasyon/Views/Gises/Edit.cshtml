@model Bilet_Rezervasyon.Models.Gise
<!--Bilet Rezervasyon Modelindeki gise isimli tablodaki verilr-->

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Edit</h1>

<h4>Gise</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="GiseId" />
            <!--hidden GiseId numarası gizliyor-->
            <div class="form-group">
                <label asp-for="GiseAd" class="control-label"></label>
                <input asp-for="GiseAd" class="form-control" />
                <span asp-validation-for="GiseAd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
