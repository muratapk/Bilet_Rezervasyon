                @Html.DisplayFor(modelItem => item.Musteri.MusteriId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bilet.BiletId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.RezervasyonId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.RezervasyonId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.RezervasyonId">Delete</a>
